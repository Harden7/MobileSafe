<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/TitleStyle"
        android:gravity="center"
        android:text="3.设置安全号码" />

    <TextView
        style="@style/ContentStyle"
        android:text="SMI卡变更后" />

    <TextView
        style="@style/ContentStyle"
        android:text="报警短信会发送给安全号码"
        android:textSize="20sp"
        />

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="请输入或选择安全号码"
        android:id="@+id/et_number_input"
        android:inputType="phone" />

    <info.hoang8f.widget.FButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请选择联系人"
        fbutton:buttonColor="@color/great_blue"
        fbutton:cornerRadius="2dp"
        fbutton:shadowColor="@color/color_belize_hole"
        fbutton:shadowHeight="2dp"
        android:id="@+id/choose_contacts"
        />

    <TextView
        style="@style/ContentStyle"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_online" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/setup3" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="5dp">

            <info.hoang8f.widget.FButton
                android:id="@+id/next"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="下一步"
                fbutton:buttonColor="@color/great_blue"
                fbutton:cornerRadius="2dp"
                fbutton:shadowColor="@color/color_belize_hole"
                fbutton:shadowHeight="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="5dp">
            <info.hoang8f.widget.FButton
                android:id="@+id/back"
                android:text="上一步"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                fbutton:buttonColor="@color/great_blue"
                fbutton:cornerRadius="2dp"
                fbutton:shadowColor="@color/color_belize_hole"
                fbutton:shadowHeight="2dp"
                />
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>
